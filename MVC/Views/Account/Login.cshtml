@using MVC.Models.ViewModels;
@model LoginVM
@{
    ViewData["Title"] = "Login";
}


<section class="vh-100 px-5">
    <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="~/images/logos/wlcmImage.jpg" class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <form asp-action="Login" method="post">
                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-outline mb-2">
                        <label asp-for="UserName" class="form-label mt-4"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-outline mb-2">
                        <label asp-for="Password" class="form-label mt-4"></label>
                        <input asp-for="Password" class="form-control" autocomplete="off">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-4 form-check">
                        <label class="form-check-label">
                            <input asp-for="RememberMe" class="form-check-input">@Html.DisplayNameFor(a =>
                            a.RememberMe)
                        </label>
                    </div>
                </fieldset>

                <div class="row">
                    <div class="d-grid gap-2 mb-2">
                        <button type="submit" class="btn btn-lg btn-primary">Login</button>
                    </div>
                    <div class="d-grid gap-2 mb-4">
                        <a asp-action="Register" class="btn btn-lg btn-outline-primary" role="button">Register</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
