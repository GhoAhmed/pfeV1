@using MVC.Models.ViewModels;
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}


<section class="vh-100 px-5 mb-4">
    <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="~/images/logos/wlcmImage.jpg" class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <form asp-action="Register" method="post">
                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-outline col-6 mb-2">
                            <label asp-for="Name" class="form-label mt-4"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-outline col-6 mb-2">
                            <label asp-for="Email" class="form-label col-6 mt-4"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-outline col-6 mb-2">
                            <label asp-for="Password" class="form-label mt-4"></label>
                            <input asp-for="Password" class="form-control" autocomplete="off">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-outline col-6 mb-2">
                            <label asp-for="ConfirmPassword" class="form-label mt-4"></label>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="off">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-outline col-12 mb-2">
                            <label asp-for="Address" class="form-label mt-4"></label>
                            <textarea asp-for="Address" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div class="d-grid gap-2 mt-2 mb-2">
                        <button type="submit" class="btn btn-lg btn-primary">Register</button>
                    </div>
                    <div class="d-grid gap-2 mb-2">
                        <a asp-action="Login" class="btn btn-lg btn-outline-primary" role="button">Login</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}